      "priority": 10,
      "request": {
        "method": "POST",
        "urlPattern": "/giga-areas-location/v1/lookup/addressSearch/getAddressInfo/search"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "bodyFileName": "address-lookup/AddressSearch/all-addresses.json"
      }
    },
    {
