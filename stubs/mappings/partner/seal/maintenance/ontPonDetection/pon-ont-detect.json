{
  "priority": 3,
  "request": {
    "method": "POST",
    "urlPathPattern": "/resource-order-resource-inventory/v1/ontPonDetection/?",
    "bodyPatterns": [
      {"matchesJsonPath": "$.serialNumber"},
      {"matchesJsonPath": "$.timeStampOfFirstEvent"}
    ]
  },
  "response": {
    "status": 202,
    "headers": {
      "Content-Type": "application/json"
    }
  },
  "postServeActions": {
    "webhook": {
      "url": "{{request.headers.X-Callback-Url}}",
      "headers": {
        "Authorization": "Bearer {{oauth}}",
        "X-Callback-Correlation-Id": "{{request.headers.X-Callback-Correlation-Id}}",
        "Content-Type": "application/json"
      },
      "method": "POST",
      "jsonBody": {
        "events": [{
          "endSz": "{{jsonPath request.body '$.endSz'}}",
          "shelf": "0",
          "slot": "0",
          "port": "0",
          "onuId": 0,
          "serialNumber": "{{jsonPath request.body '$.serialNumber'}}",
          "timeStamp": "{{now timezone='Europe/Berlin' format='yyyy-MM-dd'}}T{{now timezone='Europe/Berlin' format='HH:mm:ss.SSSXXX'}}",
          "eventMessage": "LastEvent"
        },
        {
          "endSz": "{{jsonPath request.body '$.endSz'}}",
          "shelf": "0",
          "slot": "0",
          "port": "0",
          "onuId": 0,
          "serialNumber": "{{jsonPath request.body '$.serialNumber'}}",
          "timeStamp": "{{now offset='-2 days' timezone='Europe/Berlin' format='yyyy-MM-dd'}}T{{now timezone='Europe/Berlin' format='HH:mm:ss.SSSXXX'}}",
          "eventMessage": "SecondEvent"
        },
        {
          "endSz": "{{jsonPath request.body '$.endSz'}}",
          "shelf": "0",
          "slot": "0",
          "port": "0",
          "onuId": 0,
          "serialNumber": "{{jsonPath request.body '$.serialNumber'}}",
          "timeStamp": "{{now offset='-4 days' timezone='Europe/Berlin' format='yyyy-MM-dd'}}T{{now timezone='Europe/Berlin' format='HH:mm:ss.SSSXXX'}}",
          "eventMessage": "FirstEvent"
        }],
        "status": 200,
        "statustype": "SUCCESS",
        "message": "detect successfully"
      }
    }
  }
}